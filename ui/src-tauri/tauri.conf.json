{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "geenii-desktop",
  "version": "0.1.3",
  "identifier": "io.geenii.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1430",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "geenii",
        "width": 1024,
        "height": 768,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb", "rpm", "app", "dmg"
    ],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "android": {
      "minSdkVersion": 28
    },
    "externalBin": [
      "binaries/geenii-srv"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://geenii.flowmotion-labs.com/updates.latest.json",
        "https://geenii.flowmotion-labs.com/updater.php?target={{target}}&arch={{arch}}&current_version={{current_version}}"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ1RjE5RkVBRTEwNkVFMDYKUldRRzdnYmg2cC94UmRNMVg2M2tpT0FzUDFUWlF4WWFkZE0rMU1OY3FDV1VVL1d1d2FUOTVrRTkK"
    }
  }
}